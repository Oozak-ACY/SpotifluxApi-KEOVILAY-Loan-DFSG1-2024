{% extends 'base.html.twig' %}

{% block title %}Album{% endblock %}

{% block body %}
    
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <h1>Album</h1>
                <table class="table table-bordered mt-4 mb-4">

                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ album.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ album.name }}</td>
                        </tr>
                        <tr>
                            <th>Year</th>
                            <td>{{ album.year }}</td>
                        </tr>
                    </tbody>
                </table>
                <a href="{{ path('app_web_album_index') }}" class="btn btn-outline-secondary">back to list</a>

                <a href="{{ path('app_web_album_edit', {'id': album.id}) }}" class="btn btn-warning">edit</a>

                {{ include('web/album/_delete_form.html.twig') }}
            </div>
        </div>
    </div>

    
{% endblock %}
