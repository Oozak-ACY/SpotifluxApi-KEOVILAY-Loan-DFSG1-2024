{% extends 'base.html.twig' %}

{% block title %}Track{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1>Track</h1>

            <table class="table table-bordered mt-4 mb-4">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ track.id }}</td>
                    </tr>
                    <tr>
                        <th>Title</th>
                        <td>{{ track.title }}</td>
                    </tr>
                    <tr>
                        <th>Duration</th>
                        <td>{{ track.duration }}</td>
                    </tr>
                </tbody>
            </table>

            <a href="{{ path('app_web_track_index') }}" class="btn btn-outline-secondary">back to list</a>

            <a href="{{ path('app_web_track_edit', {'id': track.id}) }}" class="btn btn-warning">edit</a>

            {{ include('web/track/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
